<project name="test" default="test-build" basedir="../../">
  <description>Test related stuff build File</description>
  <import file="basic.xml" />
  <path id="test.path">
    <path refid="runtime.path"/>
    <pathelement location="${build}"/>
    <pathelement path="${lib}/junit-4.5.jar"/>
  </path>
  <property name="test-src" location="${src}/test"/>
  <property name="test-enable-transflyrules" value="false"/>	
	
	<path id="test-dist.path">
	  <fileset dir="${dist}/lib">
	    <include name="*.jar"/>
	  </fileset>
	  <pathelement path="${lib}/junit-4.5.jar"/>
	</path>
  <property name="test-file" value="dsl/clo-dsl.clo"/>
  <property name="unit-test-file" value="test/tests"/>
  <property name="unit-test-dir" value="test/unittests"/>
  <property name="test" location="test"/>
  <property name="test-temp" location="${test}/temp"/>
  <property name="reports.tests" location="${test}/test-reports"/>

  <target name="test-compile" description="Compile unit tests">
  	<echo>${toString:test.path}</echo>
    <javac srcdir="${test-src}" 
           destdir="${build}" 
           target="${java-target-version}"
           debug="yes">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="test.path"/>
    </javac>
  </target>
	
  <target name="test-build" depends="test-init,test-unit,test-parser,test-automaton" description="clean up"/>
  <target name="test-init" description="Prepare everything for the tests.">
    <mkdir dir="${reports.tests}"/>
  </target>
  
  <target name="test-unit" depends="test-compile" 
  	      description="Run the unit tests">
    <echo message="Using ${unit-test-file}"/>
    <delete dir="${unit-test-dir}"/>
    <mkdir dir="${unit-test-dir}"/>
    <java fork="yes" classname="ie.ucd.clops.test.TestGen">
      <classpath refid="test.path"/>
      <arg value="${unit-test-file}"/>
      <arg value="${unit-test-dir}"/>
    </java>
    <javac srcdir="${unit-test-dir}" destdir="${unit-test-dir}" target="${java-target-version}">
      <compilerarg value="-Xlint:all"/>
      <classpath>
        <path refid="test.path"/>
        <pathelement path="${lib}/junit-4.5.jar"/>
      </classpath>
    </javac>    
    <junit fork="yes" printsummary="yes">
      <classpath>
        <path refid="test.path"/>
        <pathelement path="${lib}/junit-4.5.jar"/>
        <pathelement path="${unit-test-dir}"/>
      </classpath>
      <test name="UnitTests" haltonfailure="no" outfile="${unit-test-dir}/result">
      	<formatter type="plain"/>
      </test>
    </junit>
  </target>

  <target name="test-automaton" description="Automaton test">
    <java fork="yes" classname="ie.ucd.clops.runtime.automaton.AutomatonTest">
      <assertions>
         <enable/>
      </assertions>
      <classpath refid="test.path"/>
    </java>
  </target>

  <!-- target name="generate-ls">
    <ant antfile="buildls.xml"  
         dir="dsl"
         inheritAll="false"/>
  </target -->

  <target name="test-parser" description="simple test">
  	<echo message="${lib}"/>
  	<echo message="Using ${test-file}"/>
  	<echo message="Using ${toString:test-dist.path}"/>
    <delete dir="${test-temp}"/>
    <mkdir dir="${test-temp}"/>
    <java fork="yes" classname="ie.ucd.clops.dsl.Main">
      <classpath refid="test-dist.path"/>
      <assertions><enable/></assertions>
      <arg value="-v"/>
      <arg value="-d"/>
      <arg value="-t=./test/"/>
      <arg value="-c"/>
      <arg value="./templates/usage.vm"/> 
      <arg value="-b"/>
      <arg value="htmldev"/> 
      <arg value="-o"/>
      <arg value="${test-temp}"/>
    	<arg value='-p=""'/>
    	<arg value="-m"/>
      <arg value="${test-file}"/>
      <arg value="-tfr=${test-enable-transflyrules}"/>
    </java>
    <javac srcdir="${test-temp}" destdir="${test-temp}" target="${java-target-version}" debug="yes">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="test.path"/>
    </javac>
  </target>
</project>
