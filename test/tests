valid: {-i ${existing-file} -o ${non-existent-file}}
valid: {-i ${existing-file} -o ${existing-file}}
valid: {-i ${existing-file} -o ${existing-dir}}
invalid: {-o ${existing-file} -i ${existing-dir}}
invalid: {-i ${non-existent-file} -o ${existing-dir}}

