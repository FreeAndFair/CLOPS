<project name="basic" default="" basedir="../../">
  <description>Basic stuff needed by everybody</description>
  <property name="src" location="src"/>
  <property name="src-java" location="${src}/java"/>
  <property name="lib"  location="lib"/>	
  <property name="build" location="bin"/>
  <property name="dist"  location="dist"/>
  <property name="doc" location="doc"/>
  <property name="java-target-version" value="1.5"/>

  <property name="release-name" value="clops"/>
  <property name="release-version" value="0.2.1"/>

  <property name="src-dsl" location="dsl"/>



  <path id="base.path">
    <filelist dir="${lib}">
      <file name="velocity-1.6.2.jar"/>
      <file name="velocity-1.6.2-dep.jar"/>
    </filelist>
  </path>		

  <path id="runtime.path">
   <path refid="base.path"/>
   <filelist dir="${lib}" files="antlr-runtime-3.1.3.jar"/>
  </path>	 


  <target name="init">
    <echo message="Creating timestamp"/>
    <tstamp/>
  </target>
</project>